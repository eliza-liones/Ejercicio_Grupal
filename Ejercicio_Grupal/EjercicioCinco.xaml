<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio_Grupal.EjercicioCinco"
             Title="EjercicioCinco">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Presupuesto de banquete"
            FontSize="22"
            HorizontalOptions="Center" />

            <Entry x:Name="txtPersonas"
            Placeholder="Ingrese nÃºmero de personas"
            Keyboard="Numeric"
                 WidthRequest="205"
                BackgroundColor="White"/>

            <Button Text="Calcular presupuesto"
             Clicked="CalcularPresupuesto"
                 BackgroundColor="CadetBlue"
                 HeightRequest="56"
                 WidthRequest="167"/>

            <Label x:Name="lblResultado"
            FontSize="18"
            TextColor="White"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>